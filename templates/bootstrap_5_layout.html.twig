{# templates/bootstrap_5_layout.html.twig #}

@media (max-width: 576px) {
    nav {
        flex-direction: column;
        margin-bottom: 5px;
    }
}

@media (min-width: 577px) {
    nav {
        flex-direction: row;
        margin-right: 10px; 
    }
}

{% block form_row %}
    <div class="mb-3">
        {{ form_label(form) }}
        {{ form_widget(form, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block button_row %}
    <div class="mb-3">
        {{ form_widget(form) }}
    </div>
{% endblock %}